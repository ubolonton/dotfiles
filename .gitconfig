# -*- mode: conf-unix; -*-

[user]
    name = Nguyễn Tuấn Anh
    email = ubolonton@gmail.com
[color]
    status = auto
    diff = auto
    branch = auto
    ui = auto
[branch "master"]
    merge = refs/heads/master
[core]
    excludesfile = ~/.gitignore_global
    # autocrlf = input
    # quotepath = false
    # safecrlf = warn
     attributesfile = ~/.gitattributes
[merge]
    tool = emerge
[push]
    default = current
[rerere]
    enabled = 1
[i18n]
    logoutputencoding = UTF-8
[diff "elisp"]
    xfuncname="^(\\((def).*)$"
[diff "clj"]
    xfuncname="^(\\((def).*)$"
[diff "cljs"]
    xfuncname="^(\\((def).*)$"
[color]
    diff = auto
    status = auto
    branch = auto
[format]
    pretty = "Commit:  %C(cyan)%H%nAuthor:  %C(green)%aN <%aE>%nDate:    (%C(yellow)%ar%Creset) %ai%n%n     %C(white)%s%n%b"


[github]
	user = ubolonton

[sendemail]
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpuser = ubolonton@gmail.com
    smtpserverport = 587
[diff "gpg"]
	textconv = gpg --no-tty --decrypt
