<?xml version="1.0"?>
<root>
  <include path="apps.xml"></include>

  <item>
    <name>ubolonton.Ergonomics</name>
    <include path="ergonomics.xml">
      <replacementdef>
        <replacementname>DISABLED</replacementname>
        <!-- Let these handle the keys themselves. -->
        <replacementvalue>EMACS, TERMINAL</replacementvalue>
      </replacementdef>
    </include>
  </item>

  <item>
    <name>ubolonton.AppSwitcher</name>
    <vkopenurldef>
      <name>KeyCode::VK_OPEN_URL_APP_Emacs</name>
      <url type="file">/Applications/MacPorts/Emacs.app</url>
    </vkopenurldef>
    <vkopenurldef>
      <name>KeyCode::VK_OPEN_URL_APP_Conkeror</name>
      <url type="file">/Users/ubolonton/Applications/Conkeror.app</url>
    </vkopenurldef>
    <vkopenurldef>
      <name>KeyCode::VK_OPEN_URL_APP_iTerm</name>
      <url type="file">/Applications/iTerm.app</url>
    </vkopenurldef>
    <vkopenurldef>
      <name>KeyCode::VK_OPEN_URL_APP_Slack</name>
      <url type="file">/Applications/Slack.app</url>
    </vkopenurldef>
    <vkopenurldef>
      <name>KeyCode::VK_OPEN_URL_APP_Firefox</name>
      <url type="file">/Applications/Firefox.app</url>
    </vkopenurldef>
    <item>
      <name>Custom app switcher keys</name>
      <identifier>ubolonton.switcher</identifier>
      <autogen>
        __KeyToKey__
        KeyCode::F1,
        KeyCode::VK_OPEN_URL_APP_Emacs,
      </autogen>
      <autogen>
        __KeyToKey__
        KeyCode::F2,
        KeyCode::VK_OPEN_URL_APP_Conkeror,
      </autogen>
      <autogen>
        __KeyToKey__
        KeyCode::F3,
        KeyCode::VK_OPEN_URL_APP_iTerm,
      </autogen>
      <autogen>
        __KeyToKey__
        KeyCode::F11,
        KeyCode::VK_OPEN_URL_APP_Slack,
      </autogen>
      <autogen>
        __KeyToKey__
        KeyCode::F12,
        KeyCode::VK_OPEN_URL_APP_Firefox,
      </autogen>
    </item>
  </item>

  <item>
    <name>ubolonton.TabbedNavigation</name>
    <include path="tabbed-navigation.xml"></include>
  </item>

  <item>
    <name>ubolonton.Slack</name>
    <include path="slack.xml"></include>
  </item>

  <item>
    <name>ubolonton.Apple</name>
    <include path="apple.xml"></include>
  </item>
</root>
